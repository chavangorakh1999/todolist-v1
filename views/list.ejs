<%- include("header") -%>
  <body>
    <div class="box" id="heading">
      <h1><%=listTitle%></h1>
    </div>
    <div class="box">
      <% newListItems.forEach((newListItem)=>{ %>
        <form action="/delete" method="POST">
          <div class="item">
            <input type="checkbox" name="checkbox" value="<%=newListItem.id%>" onchange="this.form.submit()"/>
            <p><%= newListItem.name %></p>
            <input type="hidden" name="listTitle" value=<%= listTitle %>></input>
          </div>
        </form>
    
      <% }); %>
      
      <form class="item" action="/" method="POST">
        <input
          type="text"
          name="listItem"
          placeholder="New Item"
          autocomplete="off"
        />
        <button type="submit" name="list" value=<%= listTitle %>>+</button>
      </form>
    </div>
  </body>
  <%- include("footer") -%> 